        <p>سماعات ذكية</p>
      </div>
      <!-- المنتج 2 -->
      <div class="product-card">
        <img src="path/to/image2.png" alt="ماوس وكيبورد">
        <p>ماوس وكيبورد</p>
      </div>
      <!-- المنتج 3 -->
      <div class="product-card">
        <img src="path/to/image3.png" alt="أجهزة لابتوب">
        <p>أجهزة لابتوب</p>
