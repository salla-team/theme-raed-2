<script>
function animateCounterEaseOut(counter) {
  const target = +counter.getAttribute('data-target');
  let startTime = null;
  const duration = 2000;

  function easeOut(t) {
    return 1 - Math.pow(1 - t, 3);
  }

  function update(timestamp) {
    if (!startTime) startTime = timestamp;
    const progress = Math.min((timestamp - startTime) / duration, 1);
    const value = Math.floor(easeOut(progress) * target);
    counter.textContent = value;

    if (progress < 1) {
      requestAnimationFrame(update);
    } else {
      counter.textContent = target;
    }
  }

  requestAnimationFrame(update);
}

const featureBoxes = document.querySelectorAll('.feature-box');

const observer = new IntersectionObserver(entries => {
  entries.forEach((entry, index) => {
    const box = entry.target;
    const counter = box.querySelector('.counter');

    if (entry.isIntersecting) {
      setTimeout(() => box.classList.add('visible'), index * 200); // Stagger Animation
      if (counter) animateCounterEaseOut(counter);
    } else {
      box.classList.remove('visible');
      if (counter) counter.textContent = "0";
    }
  });
}, { threshold: 0.5 });

featureBoxes.forEach(box => observer.observe(box));
</script>






