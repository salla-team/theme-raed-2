<style>
.store-features {
  background: #F5F5DC; /* بيج */
  color: #3A4F20; /* أخضر زيتي داكن للنصوص */
  padding: 30px 15px;
  border-radius: 12px;
  text-align: center;
  direction: rtl;
  margin: 20px 0;
}

.section-title {
  font-size: 1.5rem;
  color: #556B2F; /* عنوان بالأخضر الزيتي */
  margin-bottom: 20px;
  font-weight: bold;
}

.features-container {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  gap: 30px;
}

.feature-box {
  background: #6B8E23; /* أخضر زيتي */
  padding: 20px;
  border-radius: 12px;
  width: 180px;
  transition: transform 0.3s ease;
  color: #fff;
}

.feature-box:hover {
  transform: scale(1.05);
  background: #556B2F;
}

.feature-box img {
  width: 40px;
  height: 40px;
  margin-bottom: 10px;
}

.feature-box h3 {
  font-size: 1.8rem;
  color: #F5F5DC; /* الأرقام بالبيج */
  margin: 5px 0;
  font-weight: bold;
  cursor: pointer;
}

.feature-box p {
  font-size: 0.9rem;
  color: #F5F5DC;
}

/* متجاوب */
@media (max-width: 768px) {
  .features-container {
    gap: 15px;
  }
  .feature-box {
    width: 140px;
    padding: 15px;
  }
  .feature-box h3 {
    font-size: 1.4rem;
  }
}
</style>

<script>
document.querySelectorAll('.counter').forEach(counter => {
  let started = false;

  counter.addEventListener('mouseenter', () => {
    if (started) return;
    started = true;

    const target = +counter.getAttribute('data-target');
    let count = 0;
    const speed = Math.ceil(target / 60);

    function updateCount() {
      if (count < target) {
        count += speed;
        counter.textContent = count > target ? target : count;
        requestAnimationFrame(updateCount);
      }
    }

    updateCount();
  });
});
</script>
