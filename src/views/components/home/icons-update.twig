<style>
.features-section {
  display: flex;
  justify-content: center;
  gap: 35px;
  padding: 60px 20px;
  background: #fffaf3; /* بيج فاتح */
  direction: rtl;
}

.feature-card {
  background: #fff;
  border-radius: 18px;
  padding: 35px 25px;
  text-align: center;
  width: 270px;
  box-shadow: 0 6px 25px rgba(0,0,0,0.08);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  opacity: 0;
  transform: translateY(50px);
  animation: fadeUp 0.8s forwards;
}

.feature-card:nth-child(2) { animation-delay: 0.3s; }
.feature-card:nth-child(3) { animation-delay: 0.6s; }

.feature-card:hover {
  transform: translateY(-12px) scale(1.05);
  box-shadow: 0 12px 28px rgba(0,0,0,0.15);
}

.icon2 {
  background: linear-gradient(135deg, #4b5d2c, #5f7340); /* تدرج أخضر زيتي */
  width: 90px;
  height: 90px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 20px;
  animation: bounce 2s infinite;
}

.feature-card h3 {
  color: #2f3e1d;
  font-size: 20px;
  margin-bottom: 10px;
}

.feature-card p {
  color: #555;
  font-size: 15px;
}

/* Animation */
@keyframes fadeUp {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes bounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-8px); }
}

/* Responsive */
@media (max-width: 768px) {
  .features-section {
    flex-direction: column;
    align-items: center;
  }
}

</style>







<section style="padding: 40px 0; background-color: #fef2f5;">
  <h2 style="text-align: center; font-size: 24px; font-weight: bold; margin-bottom: 30px;">تسوقي حسب التصنيف</h2>

  <div class="carousel-container" style="overflow-x: auto; white-space: nowrap; scroll-behavior: smooth; padding: 0 20px;">
    <div class="carousel-track" style="display: inline-flex; gap: 20px;">

      {% set categories = [
        { name: 'كونسيلر', image: 'https://i.postimg.cc/XYzzCfn8/concealer.png' },
        { name: 'بلاشر', image: 'https://i.postimg.cc/Ghwgkn0v/blusher.png' },
        { name: 'احمر الشفاه', image: 'https://i.postimg.cc/mr3s6PY7/lipstick.png' },
        { name: 'الحواجب', image: 'https://i.postimg.cc/XJ0xyLCN/brows.png' },
        { name: 'البودر', image: 'https://i.postimg.cc/nzHryRQj/powder.png' }
      ] %}

      {% for cat in categories %}
        <div style="
          background-color: #fbd6df;
          border-radius: 50%;
          width: 120px;
          height: 120px;
          flex: 0 0 auto;
          display: flex;
          align-items: center;
          justify-content: center;
          position: relative;
          overflow: hidden;
        ">
          <img src="{{ cat.image }}" alt="{{ cat.name }}" style="width: 70px; height: auto;">
          <div style="position: absolute; bottom: -20px; width: 100%; text-align: center; font-size: 13px; font-weight: bold; color: #333; background: transparent;">
            {{ cat.name }}
          </div>
        </div>
      {% endfor %}

    </div>
  </div>

  <script>
    // سكرول تلقائي بسيط
    document.addEventListener('DOMContentLoaded', () => {
      const container = document.querySelector('.carousel-container');
      let scrollAmount = 0;
      setInterval(() => {
        scrollAmount += 1;
        container.scrollLeft += 1;
        if (scrollAmount > container.scrollWidth - container.clientWidth) {
          container.scrollLeft = 0;
          scrollAmount = 0;
        }
      }, 30); // سرعة الحركة
    });
  </script>
</section>