<style>
.features-section {
  display: flex;
  justify-content: center;
  gap: 35px;
  padding: 60px 20px;
  background: #fffaf3; /* بيج فاتح */
  direction: rtl;
}

.feature-card {
  background: #fff;
  border-radius: 18px;
  padding: 35px 25px;
  text-align: center;
  width: 270px;
  box-shadow: 0 6px 25px rgba(0,0,0,0.08);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  opacity: 0;
  transform: translateY(50px);
  animation: fadeUp 0.8s forwards;
}

.feature-card:nth-child(2) { animation-delay: 0.3s; }
.feature-card:nth-child(3) { animation-delay: 0.6s; }

.feature-card:hover {
  transform: translateY(-12px) scale(1.05);
  box-shadow: 0 12px 28px rgba(0,0,0,0.15);
}

.icon2 {
  background: linear-gradient(135deg, #4b5d2c, #5f7340); /* تدرج أخضر زيتي */
  width: 90px;
  height: 90px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 20px;
  animation: bounce 2s infinite;
}

.feature-card h3 {
  color: #2f3e1d;
  font-size: 20px;
  margin-bottom: 10px;
}

.feature-card p {
  color: #555;
  font-size: 15px;
}

/* Animation */
@keyframes fadeUp {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes bounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-8px); }
}

/* Responsive */
@media (max-width: 768px) {
  .features-section {
    flex-direction: column;
    align-items: center;
  }
}

</style>







<section style="background-color: #fef2f5; padding: 40px 0; overflow: hidden;">
  <h2 style="text-align: center; font-size: 24px; font-weight: bold; margin-bottom: 30px;">
    تسوقي حسب التصنيف
  </h2>

  <div class="loop-slider">
    <div class="track">
      {% set categories = [
        { name: 'بلاشر', image: 'https://i.postimg.cc/Ghwgkn0v/blusher.png', link: '/category/blusher' },
        { name: 'ليب جلاس', image: 'https://i.postimg.cc/2SwZ84qw/lip-gloss.png', link: '/category/lip-gloss' },
        { name: 'روج', image: 'https://i.postimg.cc/mr3s6PY7/lipstick.png', link: '/category/lipstick' },
        { name: 'بودي سبلاش', image: 'https://i.postimg.cc/Kzb9zTtv/bodysplash.png', link: '/category/bodysplash' },
        { name: 'هايلايتر', image: 'https://i.postimg.cc/J7fML0kk/concealer.png', link: '/category/highlighter' },
        { name: 'ماسكارا', image: 'https://i.postimg.cc/4yTX9brW/mascara.png', link: '/category/mascara' }
      ] %}

      {% for i in 1..2 %}
        {% for cat in categories %}
          <a href="{{ cat.link }}" class="item">
            <div class="circle">
              <img src="{{ cat.image }}" alt="{{ cat.name }}">
            </div>
            <p>{{ cat.name }}</p>
          </a>
        {% endfor %}
      {% endfor %}
    </div>
  </div>

  <style>
    .loop-slider {
      overflow: hidden;
      position: relative;
      width: 100%;
      direction: rtl;
    }

    .track {
      display: flex;
      width: calc(6 * 2 * 160px); /* 6 عناصر × مرتين × عرض العنصر تقريباً */
      animation: scrollLoop 30s linear infinite;
    }

    .item {
      text-align: center;
      flex: 0 0 auto;
      width: 160px;
      margin: 0 10px;
      text-decoration: none;
      color: inherit;
      transition: transform 0.3s ease;
    }

    .item:hover {
      transform: scale(1.1);
    }

    .circle {
      width: 120px;
      height: 120px;
      border-radius: 50%;
      background-color: #fbd6df;
      display: flex;
      justify-content: center;
      align-items: center;
      margin: 0 auto;
    }

    .circle img {
      width: 60px;
      height: auto;
    }

    .item p {
      margin-top: 10px;
      font-weight: bold;
      font-size: 14px;
    }

    @keyframes scrollLoop {
      0%   { transform: translateX(0); }
      100% { transform: translateX(-50%); }
    }


  </style>
</section>


