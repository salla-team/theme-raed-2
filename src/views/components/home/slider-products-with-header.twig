<section class="s-block s-block--slider-with-bg s-block--full-bg">
    <div class="slider-bg" style="background-image: url('{{ component.background }}'); background-size: cover; background-position: center; border-radius: 12px; box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);">
        <div class="container pt-8 sm:pt-20 relative text-center">
            <div>
                <h3 class="text-lg font-bold leading-12 text-gray-800 mb-4">
                    {{ component.title }}
                </h3>
                <p class="text-sm mb-8 line-clamp-2 max-w-lg mx-auto text-gray-600">
                    {{ component.description }}
                </p>
            </div>
        </div>
    </div>

    {% set display_all = component.display_all_url  %}
    <div class="container -mt-62 relative overflow-hidden">
        <salla-products-slider
            class="custom-slider"
            {% if component.products|length %}
              source="selected" 
              source-value="[{{ component.products|map((product) => product.id)|join(',') }}]" 
            {% endif %}
            {% if display_all != '' and  display_all != '#' %}
                display-all-url="{{display_all}}" 
            {% endif %}
            block-title=" " 
            slider-id="slider-with-bg-{{ position }}"
        ></salla-products-slider>
    </div>
</section>

<style>
  /* تحسين تصميم الخلفية */
  .slider-bg {
    padding: 20px;
    border-radius: 12px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    background-size: cover;
    background-position: center;
  }

  /* تحسين تصميم النصوص */
  .slider-bg h3 {
    font-size: 1.8rem;
    color: #333;
    margin-bottom: 10px;
  }

  .slider-bg p {
    font-size: 1rem;
    color: #666;
    line-height: 1.5;
  }

  /* تحسين تصميم السلايدر */
  .custom-slider {
    display: flex;
    gap: 20px;
    overflow-x: auto;
    padding: 20px;
    background-color: #fff;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .custom-slider::-webkit-scrollbar {
    height: 8px;
  }

  .custom-slider::-webkit-scrollbar-thumb {
    background: #ccc;
    border-radius: 4px;
  }

  .custom-slider::-webkit-scrollbar-thumb:hover {
    background: #aaa;
  }

  /* تحسين التجاوب */
  @media (max-width: 768px) {
    .slider-bg {
      padding: 15px;
    }

    .slider-bg h3 {
      font-size: 1.5rem;
    }

    .slider-bg p {
      font-size: 0.9rem;
    }

    .custom-slider {
      padding: 15px;
    }
  }

  @media (max-width: 480px) {
    .slider-bg h3 {
      font-size: 1.2rem;
    }

    .slider-bg p {
      font-size: 0.8rem;
    }
  }
</style>