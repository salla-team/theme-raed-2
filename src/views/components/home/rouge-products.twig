{% for rouge in component.rouge %}
<!-- Section Hero Slider -->
<div class="relative h-screen max-h-[900px] overflow-hidden">
  <!-- Background Image -->
  <div 
    class="swiper-slide absolute inset-0 bg-cover bg-center z-0"
    style="background-image: url('{{ rouge.image_section }}')"
  >
    <div class="absolute inset-0 bg-olive-900/20 z-10"></div>
  </div>
  
  <!-- Content -->
  <div class="container mx-auto px-4 h-full flex items-center relative z-20">
    <div class="max-w-2xl bg-beige/90 p-8 rounded-lg backdrop-blur-sm">
      <h3 
        class="text-4xl md:text-5xl font-serif font-bold text-olive-800 mb-4"
        data-swiper-parallax="-300"
      >
        {{ rouge.section_title }}
      </h3>
      <p class="text-olive-700 text-lg">{{ rouge.section_description }}</p>
    </div>
  </div>
</div>
{% endfor %}

<!-- Products Grid -->
<div class="container mx-auto px-4 py-16">
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
    {% for rouge_product1 in component.rouge_product1 %}
    <div class="group bg-white rounded-xl shadow-lg overflow-hidden transition-all duration-300 hover:shadow-xl hover:-translate-y-2">
      <!-- Product Image -->
      <div class="relative overflow-hidden h-80">
        <img
          data-swiper-parallax="-700"
          src="{{ rouge_product1.image_product1 }}"
          alt="{{ rouge_product1.name_product1 }}"
          class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
        />
        <!-- Badge -->
        <span class="absolute top-4 right-4 bg-olive-600 text-white px-3 py-1 rounded-full text-sm">New</span>
      </div>
      
      <!-- Product Info -->
      <div class="p-6">
        <h3 class="font-serif text-xl text-olive-800 mb-2">{{ rouge_product1.category }}</h3>
        <p 
          class="text-lg font-medium text-gray-900 mb-3"
          data-swiper-parallax="-700"
        >
          {{ rouge_product1.name_product1 }}
        </p>
        <div class="flex justify-between items-center">
          <span class="text-olive-600 font-bold text-xl">{{ rouge_product1.price1 }}</span>
          <button class="bg-olive-600 text-white px-4 py-2 rounded-full hover:bg-olive-700 transition-colors">
            Add to Cart
          </button>
        </div>
      </div>
    </div>
    {% endfor %}
  </div>
</div>
<style>
/* Custom Colors */
.bg-olive-900 {
  background-color: #556b2f;
}
.bg-olive-600 {
  background-color: #6b8e23;
}
.bg-olive-700 {
  background-color: #5a7a1e;
}
.text-olive-800 {
  color: #4a6021;
}
.text-olive-700 {
  color: #5a7a1e;
}
.text-olive-600 {
  color: #6b8e23;
}
.bg-beige {
  background-color: #f5f5dc;
}
.bg-olive-900\/20 {
  background-color: rgba(85, 107, 47, 0.2);
}
.bg-beige\/90 {
  background-color: rgba(245, 245, 220, 0.9);
}

/* Hover Effects */
.group:hover .group-hover\:scale-105 {
  transform: scale(1.05);
}
</style>