<div class="rouge-section container mx-auto px-4 py-8">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {% for rouge_product1 in component.rouge_product1 %}
        <div class="product-card bg-white rounded-2xl shadow-lg overflow-hidden flex flex-col items-center text-center p-4">
            <div class="relative w-full">
                <img src="{{ rouge_product1.image_product1 }}" alt="{{ rouge_product1.name_product1 }}" class="w-full h-auto rounded-xl object-cover">
                <button class="wishlist-btn absolute top-3 right-3 bg-white text-olive rounded-full p-2 shadow">
                    ♥
                </button>
            </div>
            <div class="p-4 flex flex-col items-center">
                <h3 class="product-name font-semibold text-lg text-olive mb-2">{{ rouge_product1.name_product1 }}</h3>
                <p class="product-price text-beige font-bold mb-3">{{ rouge_product1.price1 }} USD</p>
                <button class="add-cart-btn bg-olive text-white font-medium py-2 px-4 rounded-full hover:bg-olive-dark transition-all">
                    🛒 إضافة إلى السلة
                </button>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
<style>
:root {
  --olive: #6B8E23;       /* أخضر زيتي */
  --olive-dark: #556B2F;  /* درجة أغمق */
  --beige: #DCC7A1;       /* بيج */
}

.product-card {
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}
.product-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 10px 20px rgba(0,0,0,0.1);
}

.wishlist-btn {
  font-size: 18px;
  transition: background 0.3s ease, transform 0.2s ease;
}
.wishlist-btn:hover {
  background: var(--olive);
  color: #fff;
  transform: scale(1.1);
}

.add-cart-btn {
  transition: background 0.3s ease;
}
.add-cart-btn:hover {
  background: var(--olive-dark);
}

.product-name {
  color: var(--olive);
}
.product-price {
  color: var(--olive-dark);
}

/* ✅ استجابة لكل الشاشات */
@media (max-width: 768px) {
  .product-card {
    padding: 10px;
  }
  .add-cart-btn {
    width: 100%;
  }
}
</style>