<div class="rouge-section">
    {% for rouge_product1 in component.rouge_product1 %}
    <div class="product-card">
        <div class="image-wrapper">
            <img src="{{ rouge_product1.image_product1 }}" alt="{{ rouge_product1.name_product1 }}">
            <button class="wishlist-btn">♥</button>
        </div>
        <div class="product-info">
            <h3 class="product-name">{{ rouge_product1.name_product1 }}</h3>
            <p class="product-price">{{ rouge_product1.price1 }} USD</p>
            <button class="add-cart-btn">🛒 إضافة إلى السلة</button>
        </div>
    </div>
    {% endfor %}
</div>
<style>
:root {
  --olive: #6B8E23;       /* أخضر زيتي */
  --olive-dark: #556B2F;  /* درجة أغمق */
  --beige: #DCC7A1;       /* بيج */
}

.rouge-section {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 20px;
  padding: 20px;
}

.product-card {
  background: #fff;
  border-radius: 15px;
  overflow: hidden;
  box-shadow: 0 4px 15px rgba(0,0,0,0.08);
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}
.product-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 20px rgba(0,0,0,0.12);
}

.image-wrapper {
  position: relative;
  width: 100%;
}
.image-wrapper img {
  width: 100%;
  display: block;
  border-bottom: 1px solid #eee;
  border-radius: 15px 15px 0 0;
}

.wishlist-btn {
  position: absolute;
  top: 10px;
  right: 10px;
  background: #fff;
  border: none;
  border-radius: 50%;
  padding: 8px 10px;
  font-size: 18px;
  color: var(--olive);
  cursor: pointer;
  box-shadow: 0 2px 6px rgba(0,0,0,0.15);
  transition: all 0.3s ease;
}
.wishlist-btn:hover {
  background: var(--olive);
  color: #fff;
  transform: scale(1.1);
}

.product-info {
  padding: 15px;
  text-align: center;
}

.product-name {
  font-size: 18px;
  font-weight: 600;
  color: var(--olive);
  margin-bottom: 8px;
}

.product-price {
  font-size: 16px;
  font-weight: bold;
  color: var(--beige);
  margin-bottom: 12px;
}

.add-cart-btn {
  background: var(--olive);
  color: #fff;
  border: none;
  padding: 10px 16px;
  border-radius: 30px;
  cursor: pointer;
  font-size: 15px;
  font-weight: 500;
  transition: background 0.3s ease;
}
.add-cart-btn:hover {
  background: var(--olive-dark);
}

/* ✅ استجابة الشاشات الصغيرة */
@media (max-width: 768px) {
  .add-cart-btn {
    width: 100%;
  }
  .product-name {
    font-size: 16px;
  }
}

</style>