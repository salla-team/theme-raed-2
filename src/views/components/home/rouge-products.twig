  background-size: cover;
  background-position: center;
  position: relative;
  transition: transform 0.5s ease;
}

.shiny-flair::before {
  content: '';
  position: absolute;
  inset: 0;
  background: linear-gradient(145deg, rgba(110,127,89,0.25), rgba(248,248,242,0.1));
}

@media (min-width: 768px) {
  .shiny-flair {
    width: 50%;
    min-height: 100vh;
  }
}

.elegant-veil {
  width: 100%;
  padding: 50px 25px;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f8f8f2;
  direction: rtl;
  position: relative;
}

@media (min-width: 768px) {
  .elegant-veil {
    width: 50%;
    padding: 80px 50px;
  }
}

.veil-overlay {
  position: absolute;
  inset: 0;
  background: linear-gradient(60deg, rgba(143,151,121,0.7), rgba(255,255,255,0.1));
  z-index: 0;
}

.glow-box {
  position: relative;
  max-width: 600px;
  z-index: 1;
  text-align: center;
  color: #fff;
  background: rgba(255,255,255,0.08);
  border: 1px solid rgba(255,255,255,0.2);
  padding: 40px 30px;
  border-radius: 20px;
  backdrop-filter: blur(6px);
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
  transition: transform 0.4s ease;
}

.glow-box:hover {
  transform: translateY(-8px);
}

.glow-box h3 {
  font-family: 'Playfair Display', serif;
  font-size: 2.4rem;
  margin-bottom: 20px;
  color: #fff;
  text-shadow: 0 2px 6px rgba(0,0,0,0.3);
  position: relative;
}

.glow-box h3::after {
  content: '';
  width: 70px;
  height: 3px;
  background: #fff;
  display: block;
  margin: 10px auto 0;
  border-radius: 3px;
}

.glow-box p {
  font-family: 'Open Sans', sans-serif;
  font-size: 1.1rem;
  font-weight: 300;
  line-height: 1.8;
  color: #fefefe;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
}

/* Motion */
@media (prefers-reduced-motion: no-preference) {
  .glow-box {
    animation: popFade 0.7s ease-in-out both;
  }

  .shiny-flair {
    animation: fadeOnly 0.7s ease-in-out both;
  }
}

@keyframes popFade {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeOnly {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

/* Responsive Text */
@media (max-width: 576px) {
  .glow-box {
    padding: 25px;
  }

  .glow-box h3 {
    font-size: 1.8rem;
  }

  .glow-box p {
    font-size: 1rem;
  }
}
</style>

